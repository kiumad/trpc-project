generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  text      String
  createdAt DateTime
  updatedAt DateTime
}

model Comment {
  id       Int    @id @default(autoincrement())
  text     String
  username String
  postId   Int
}

model Users {
  id       Int    @id @default(autoincrement())
  username String @unique
  fullName String
  image    String
  password String
}
